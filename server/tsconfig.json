{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "moduleResolution": "node",
      "outDir": "./dist",
      "sourceMap": true
   },
   "include": [
      "src/**/*.ts",
      "src/views/email/*.pug", // Include Pug files
      "src/app.ts"
   ],
   "exclude": ["node_modules"]
}
